<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <ImageView
        android:id="@+id/userImageView"
        style="@style/GridImage"
        android:contentDescription="@string/content_desc_user_avatar"
        android:src="@mipmap/avatar_empty"/>

    <ImageView
        android:id="@+id/checkImageView"
        style="@style/GridImage"
        android:contentDescription="@string/User_check_mark"
        android:src="@mipmap/avatar_selected"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/userImageView"
        android:maxLines="2"
        android:padding="4dp"
        android:text="@string/gridview_default_username"
        android:layout_centerInParent="true"/>


</RelativeLayout>