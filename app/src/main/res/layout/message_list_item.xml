<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/message_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/message_list_item_vertical_margin"
        android:paddingLeft="@dimen/message_list_item_horizontal_margin"
        android:paddingRight="@dimen/message_list_item_horizontal_margin"
        android:paddingTop="@dimen/message_list_item_vertical_margin"
        android:src="@mipmap/ic_action_picture"/>

    <TextView
        android:id="@+id/message_sender_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/message_Icon"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/message_Icon"
        android:layout_toRightOf="@+id/message_Icon"
        android:gravity="center"
        android:paddingBottom="@dimen/message_list_item_vertical_margin"
        android:paddingLeft="@dimen/message_list_item_horizontal_margin"
        android:paddingRight="@dimen/message_list_item_horizontal_margin"
        android:paddingTop="@dimen/message_list_item_vertical_margin"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</RelativeLayout>